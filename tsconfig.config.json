{
  "include": [
    "src/components/index.ts",
    "vite.config.*",
    "vitest.config.*",
    "cypress.config.*",
    "src/**/*.ts",
    "src/**/*.vue",
    "test/**/*.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "isolatedModules": true,
    "types": ["node"],
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"],
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "outDir": "lib",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": ["node_modules"]
}
